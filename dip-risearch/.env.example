# OpenAI Configuration
OPENAI_KEY=your_openai_api_key_here
OPENAI_ENDPOINT=https://api.openai.com/v1
CUSTOM_MODEL=o3-mini

# Fireworks AI (for DeepSeek R1)
FIREWORKS_KEY=your_fireworks_api_key_here

# Google Gemini
GEMINI_KEY=your_gemini_api_key_here
USE_GEMINI=false

# Custom Search API
CUSTOM_API_BASE_URL=http://localhost:5022
CUSTOM_API_CONCURRENCY=2

# Application Configuration
NODE_ENV=production
PORT=8080
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# Research Configuration
RESEARCH_TIMEOUT=300000
CONTEXT_SIZE=128000

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000
RESEARCH_RATE_LIMIT_MAX_REQUESTS=10
RESEARCH_RATE_LIMIT_WINDOW_MS=3600000

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,http://localhost:3000

# Security
# Add any additional security configurations here
